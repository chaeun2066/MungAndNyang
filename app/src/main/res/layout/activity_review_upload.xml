<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#F4F2EF"
    tools:context=".ReviewUploadActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="입양 후기"
            android:textColor="@color/font_brown"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="를 작성해주세요"
            android:textSize="17sp"/>



    </LinearLayout>

    <ImageView
        android:id="@+id/iv_revup_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/addphoto" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/white_detail_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/revup_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이름 : "
                        android:textColor="@color/font_brown"
                        android:layout_marginBottom="10dp"
                        android:textSize="17sp"/>

                    <EditText
                        android:id="@+id/tv_revup_name"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        android:hint="이름"
                        android:background="@android:color/transparent"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_revup_gender"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/gender" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/revup_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="나이 : "
                    android:textColor="@color/font_brown"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/tv_revup_age"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="나이"
                    android:background="@android:color/transparent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="세"
                    android:textColor="@color/font_brown"
                    android:textSize="17sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/revup_kind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="종 : "
                    android:textColor="@color/font_brown"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/tv_revup_kind"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="종"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/revup_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="함께 한 날 : "
                    android:textColor="@color/font_brown"
                    android:textSize="17sp"/>

                <TextView
                    android:id="@+id/tv_revup_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:hint="DATE" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/revup_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="내용"
                    android:textColor="@color/font_brown"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/tv_revup_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:textSize="17sp"
                    android:hint="내용"
                    android:background="@android:color/transparent"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/btn_revup_reg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="등록"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@drawable/button_background"/>

</LinearLayout>